{
    "plugins": [
        "googleappsscript"
    ],
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "mocha": true,
        "googleappsscript/googleappsscript": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "space-in-parens": ["error", "always"],
        "linebreak-style": 0,
        "indent": [
            "error", 
            4, 
            {
                "SwitchCase": 1
            }
        ]
    }
}
